        <!-- XBL -->
		<receiver
			android:name=".widget.XboxLiveGamercard" 
			android:label="@string/xbl_gamercard"
			android:icon="@drawable/xbox_icon_gamercard"
		>
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
