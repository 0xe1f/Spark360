<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:minHeight="?android:attr/listPreferredItemHeight" 
	android:paddingRight="9dp"
	style="@style/psnListViewActivatedStyle"
>
	<ImageView 
		android:id="@+id/game_icon" 
		android:src="@drawable/psn_game_default"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true" 
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_width="116dp" 
		android:layout_height="64dp"
		android:background="@color/icon_background"
	/>
	<TextView
		android:id="@+id/game_title"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:textAppearance="@style/TextAppearance.title" 
		android:ellipsize="marquee" 
		android:singleLine="true"
		android:layout_alignParentTop="true" 
		android:layout_toRightOf="@id/game_icon" 
	/>
	<ImageView
	    android:id="@+id/opp_icon"
		android:layout_width="38dp" 
		android:layout_height="38dp"
		android:layout_toRightOf="@id/game_icon"
		android:layout_alignBottom="@id/game_icon"
	 	android:layout_marginRight="4dp"
		android:background="@color/icon_background" 
	/>
	<ImageView
	    android:id="@+id/self_icon"
		android:layout_width="38dp" 
		android:layout_height="38dp"
		android:layout_alignParentRight="true"
		android:layout_alignBottom="@id/game_icon"
	 	android:layout_marginLeft="4dp"
		android:background="@color/icon_background" 
	/>
	<TextView
	    android:id="@+id/self_not_played"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/self_icon"
		android:layout_alignBottom="@id/self_icon"
		android:orientation="horizontal"
		android:gravity="center"
		android:text="@string/not_played"
		android:textAppearance="@style/TextAppearance.secondary" 
	/>
	<LinearLayout
	    android:id="@+id/self_section"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toLeftOf="@id/self_icon"
		android:layout_alignBottom="@id/self_icon"
		android:orientation="horizontal"
		android:gravity="center"
	>
		<TextView
			android:id="@+id/self_progress"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
		 	android:layout_marginRight="2dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>	
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_all_small" 
		/>
		<TextView
			android:id="@+id/self_trophies_all"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_bronze_small" 
		/>
		<TextView
			android:id="@+id/self_trophies_bronze"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_silver_small" 
		/>
		<TextView
			android:id="@+id/self_trophies_silver"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_gold_small" 
		/>
		<TextView
			android:id="@+id/self_trophies_gold"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_platinum_small" 
		/>
		<TextView
			android:id="@+id/self_trophies_platinum"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
	</LinearLayout>
	<TextView
	    android:id="@+id/opp_not_played"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/opp_icon"
		android:layout_alignTop="@id/opp_icon"
		android:orientation="horizontal"
		android:gravity="center"
		android:text="@string/not_played"
		android:textAppearance="@style/TextAppearance.secondary" 
	/>
	<LinearLayout
	    android:id="@+id/opp_section"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_toRightOf="@id/opp_icon"
		android:layout_alignTop="@id/opp_icon"
		android:orientation="horizontal"
		android:gravity="center"
	>
		<TextView
			android:id="@+id/opp_progress"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
		 	android:layout_marginRight="2dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_all_small" 
		/>
		<TextView
			android:id="@+id/opp_trophies_all"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_bronze_small" 
		/>
		<TextView
			android:id="@+id/opp_trophies_bronze"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_silver_small" 
		/>
		<TextView
			android:id="@+id/opp_trophies_silver"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_gold_small" 
		/>
		<TextView
			android:id="@+id/opp_trophies_gold"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
		<ImageView
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:src="@drawable/psn_trophy_platinum_small" 
		/>
		<TextView
			android:id="@+id/opp_trophies_platinum"
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content" 
		 	android:layout_marginLeft="1.5dp"
		 	android:layout_marginRight="3.5dp"
			android:textAppearance="@style/TextAppearance.secondary" 
		/>
	</LinearLayout>
</RelativeLayout>