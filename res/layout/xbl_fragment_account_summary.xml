<FrameLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent" 
>
    <TextView
        android:id="@+id/message"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:padding="5dip" 
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/select_account_or_create_new"
        android:textAppearance="@style/TextAppearance.largeMessage" 
    />
	<LinearLayout
	    android:id="@+id/profile"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:orientation="vertical"
		style="@style/roundedPaneOuter"
	>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:paddingLeft="0dp"
			android:paddingRight="0dp"
			style="@style/roundedPaneInner"
		>
			<ScrollView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:background="@drawable/xbox_streak_bg"
			>
				<LinearLayout
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:orientation="vertical"
				>
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="horizontal"
					>
						<ImageView 
							android:id="@+id/profile_avatar_body" 
							android:src="@drawable/xbox_avatar_body_default"
							android:layout_width="130dp" 
							android:layout_height="260dp"
							android:layout_gravity="center_horizontal"
						/>
						<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:gravity="right"
							android:orientation="vertical"
						>
							<LinearLayout
								android:id="@+id/open_messages"
								android:layout_width="@dimen/xboxLiveButtonWidth"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:focusable="true"
								android:clickable="true"
								android:gravity="right"
								android:paddingBottom="10dp"
								android:paddingTop="10dp"
								android:paddingRight="10dp"
								android:layout_marginTop="10dp"
								android:background="@drawable/xbox_simple_button"
							>
								<TextView
									android:id="@+id/profile_unread_messages"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textAppearance="@style/TextAppearance.profileCount"
								/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/messages_unread"
									android:textAppearance="@style/TextAppearance.profileCategory"
								/>
							</LinearLayout>
							
							<LinearLayout
								android:id="@+id/open_friends"
								android:layout_width="@dimen/xboxLiveButtonWidth"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:focusable="true"
								android:clickable="true"
								android:gravity="right"
								android:paddingBottom="10dp"
								android:paddingTop="10dp"
								android:paddingRight="10dp"
								android:layout_marginTop="10dp"
								android:background="@drawable/xbox_simple_button"
							>
								<TextView
									android:id="@+id/profile_friends_online"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textAppearance="@style/TextAppearance.profileCount"
								/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/friends_online"
									android:textAppearance="@style/TextAppearance.profileCategory"
								/>
							</LinearLayout>
							
							<LinearLayout
								android:id="@+id/open_games"
								android:layout_width="@dimen/xboxLiveButtonWidth"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:focusable="true"
								android:clickable="true"
								android:gravity="right"
								android:paddingBottom="10dp"
								android:paddingTop="10dp"
								android:paddingRight="10dp"
								android:layout_marginTop="10dp"
								android:background="@drawable/xbox_simple_button"
							>
								<TextView
									android:id="@+id/profile_games_played"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/nbsp"
									android:textAppearance="@style/TextAppearance.profileCount"
								/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/games_played_u"
									android:textAppearance="@style/TextAppearance.profileCategory"
								/>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
					
					<LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
						android:background="@drawable/info_background_editable"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp"
					>
						<TextView
						    android:id="@+id/edit_profile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
						    android:text="@string/edit_profile_caption"
                            android:layout_gravity="right"
                            android:layout_marginTop="2dp"
                            android:layout_marginRight="2dp"
                            style="@style/editProfileButton"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:paddingTop="10dp"
						>
							<TextView
								android:text="@string/info_gamerscore"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<LinearLayout
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentRight="true"
							>
								<ImageView 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"
									android:layout_gravity="center_vertical"
									android:src="@drawable/xbox_g_medium"
								/>
								<TextView
									android:id="@+id/profile_points"
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content" 
									android:layout_marginLeft="5dp"
									android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
								/>
							</LinearLayout>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
							android:layout_marginTop="3dp"
							android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						>
							<TextView
								android:id="@+id/rep_label"
								android:text="@string/info_rep"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<LinearLayout 
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content"
								android:orientation="horizontal"
								android:gravity="center"
								android:layout_alignTop="@id/rep_label"
								android:layout_alignBottom="@id/rep_label"
								android:layout_alignParentRight="true"
							>
								<ImageView 
									android:id="@+id/profile_rep_star0"
									android:src="@drawable/xbox_star_o0"
									android:layout_width="14dp" 
									android:layout_height="14dp"
								/>
								<ImageView 
									android:id="@+id/profile_rep_star1"
									android:src="@drawable/xbox_star_o0"
									android:layout_width="14dp" 
									android:layout_height="14dp"
								/>
								<ImageView 
									android:id="@+id/profile_rep_star2"
									android:src="@drawable/xbox_star_o0"
									android:layout_width="14dp" 
									android:layout_height="14dp"
								/>
								<ImageView 
									android:id="@+id/profile_rep_star3"
									android:src="@drawable/xbox_star_o0"
									android:layout_width="14dp" 
									android:layout_height="14dp"
								/>
								<ImageView 
									android:id="@+id/profile_rep_star4"
									android:src="@drawable/xbox_star_o0"
									android:layout_width="14dp" 
									android:layout_height="14dp"
								/>
							</LinearLayout>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
							android:layout_marginTop="3dp"
							android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						>
							<TextView
								android:text="@string/info_name"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<TextView
								android:id="@+id/profile_name"
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_marginLeft="5dp"
								android:layout_alignParentRight="true"
								android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
							/>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						>
							<TextView
								android:text="@string/info_location"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<TextView
								android:id="@+id/profile_location"
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_marginLeft="5dp"
								android:layout_alignParentRight="true"
								android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
							/>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						>
							<TextView
								android:text="@string/info_motto"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<TextView
								android:id="@+id/profile_motto"
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_marginLeft="5dp"
								android:layout_alignParentRight="true"
								android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
							/>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						>
							<TextView
								android:text="@string/info_points_balance"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<LinearLayout
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentRight="true"
							>
								<ImageView 
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content"
									android:layout_gravity="center_vertical"
									android:src="@drawable/xbox_msp_medium"
								/>
								<TextView
									android:id="@+id/profile_msp"
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content" 
									android:layout_marginLeft="5dp"
									android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
								/>
							</LinearLayout>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<RelativeLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						>
							<TextView
								android:text="@string/info_membership"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:layout_alignParentTop="true"
								android:layout_alignParentLeft="true"
								android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
							/>
							<TextView
								android:id="@+id/profile_membership"
								android:layout_width="wrap_content" 
								android:layout_height="wrap_content" 
								android:layout_marginLeft="5dp"
								android:layout_alignParentTop="true"
								android:layout_alignParentRight="true"
								android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
							/>
						</RelativeLayout>
						<View
							android:layout_width="fill_parent"
							android:layout_height="1dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
							android:background="@color/xbox_divider"
						/>
						<TextView
							android:text="@string/info_bio"
							android:layout_width="wrap_content"
							android:layout_height="wrap_content" 
							android:textAppearance="@style/TextAppearance.xboxFriendCategory" 
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						/>
						<TextView
							android:id="@+id/profile_bio"
							android:layout_width="fill_parent"
							android:layout_height="wrap_content" 
							android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
						/>
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</LinearLayout>
</FrameLayout>
