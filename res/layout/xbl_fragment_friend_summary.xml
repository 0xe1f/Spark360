<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
>
	<LinearLayout 
	    android:id="@+id/profile_contents"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" 
		android:orientation="vertical"
		style="@style/roundedPaneOuter"
	>
		<LinearLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:orientation="vertical"
			android:paddingLeft="0dp"
			android:paddingRight="0dp"
			style="@style/roundedPaneInner"
		>
			<ScrollView
				android:layout_width="fill_parent" 
				android:layout_height="fill_parent"
				android:background="@drawable/xbox_streak_bg"
			>
				<LinearLayout
					android:layout_width="fill_parent" 
					android:layout_height="wrap_content"
					android:padding="10dp"
					android:orientation="vertical"
				> 
					<LinearLayout
						android:layout_width="fill_parent" 
						android:layout_height="wrap_content"
						android:orientation="horizontal"
					> 
						<ImageView 
							android:id="@+id/profile_avatar_body" 
							android:src="@drawable/xbox_avatar_body_default"
							android:layout_width="130dp" 
							android:layout_height="260dp"
							android:layout_gravity="center_horizontal"
						/>
						<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:gravity="right"
							android:orientation="vertical"
						>
							<LinearLayout
								android:id="@+id/refresh_profile"
								android:layout_width="@dimen/xboxLiveButtonWidth"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:focusable="true"
								android:clickable="true"
								android:gravity="right"
								android:paddingBottom="10dp"
								android:paddingTop="10dp"
								android:paddingRight="10dp"
								android:layout_marginTop="10dp"
								android:background="@drawable/xbox_simple_button"
							>
								<TextView
									android:text=" "
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textAppearance="@style/TextAppearance.profileCount"
								/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/refresh"
									android:textAppearance="@style/TextAppearance.profileCategory"
								/>
							</LinearLayout>
							
							<LinearLayout
								android:id="@+id/compare_games"
								android:layout_width="@dimen/xboxLiveButtonWidth"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:focusable="true"
								android:clickable="true"
								android:gravity="right"
								android:paddingBottom="10dp"
								android:paddingTop="10dp"
								android:paddingRight="10dp"
								android:layout_marginTop="10dp"
								android:background="@drawable/xbox_simple_button"
							>
								<TextView
									android:text=" "
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textAppearance="@style/TextAppearance.profileCount"
								/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/compare_games_u"
									android:textAppearance="@style/TextAppearance.profileCategory"
								/>
							</LinearLayout>
							
							<LinearLayout
								android:id="@+id/compose_message"
								android:layout_width="@dimen/xboxLiveButtonWidth"
								android:layout_height="wrap_content"
								android:orientation="vertical"
								android:focusable="true"
								android:clickable="true"
								android:gravity="right"
								android:paddingBottom="10dp"
								android:paddingTop="10dp"
								android:paddingRight="10dp"
								android:layout_marginTop="10dp"
								android:background="@drawable/xbox_simple_button"
							>
								<TextView
									android:text=" "
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:textAppearance="@style/TextAppearance.profileCount"
								/>
								<TextView
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:text="@string/compose_message_u"
									android:textAppearance="@style/TextAppearance.profileCategory"
								/>
							</LinearLayout>
						</LinearLayout>
					</LinearLayout>
					
					<LinearLayout
					    android:id="@+id/beacon_list"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
	                    android:layout_marginTop="10dp"
	                    android:layout_marginBottom="10dp"
					    android:orientation="vertical"
					/>
					
	                <LinearLayout
						android:layout_width="fill_parent"
						android:layout_height="wrap_content"
						android:orientation="vertical"
					>
						<LinearLayout
							android:layout_width="fill_parent"
							android:layout_height="wrap_content"
							android:orientation="vertical"
							android:background="@drawable/info_background"
                            android:paddingTop="10dp"
                            android:paddingBottom="10dp"
						>
							<LinearLayout
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:orientation="horizontal"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
							>
								<ImageView 
									android:id="@+id/profile_avatar" 
									android:src="@drawable/avatar_default"
									android:layout_marginRight="10dp"
									android:layout_marginBottom="5dp"
									android:layout_width="48dp" 
									android:layout_height="48dp"
								/>
								<LinearLayout
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:orientation="vertical"
								>
									<TextView
										android:id="@+id/profile_gamertag"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:singleLine="true"
										android:ellipsize="end"
										android:textAppearance="@style/TextAppearance.profileGamertag"
									/>
									<TextView
										android:id="@+id/profile_status"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:textAppearance="@style/TextAppearance.xboxFriendStatus" 
									/>
								</LinearLayout>
							</LinearLayout>
							<TextView
								android:id="@+id/profile_info"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:textAppearance="@style/TextAppearance.friendRecentActivity" 
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
							/>
							<View
								android:layout_width="fill_parent"
								android:layout_height="1px"
								android:layout_marginTop="3dp"
								android:layout_marginBottom="3dp"
								android:background="@color/divider"
							/>
							<RelativeLayout
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
	                            android:paddingLeft="5dp"
	                            android:paddingRight="5dp"
							>
								<TextView
									android:text="@string/info_gamerscore"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentLeft="true"
									android:textAppearance="@style/TextAppearance.friendCategory" 
								/>
								<LinearLayout
									android:layout_width="wrap_content" 
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentRight="true"
								>
									<ImageView 
										android:layout_width="wrap_content" 
										android:layout_height="wrap_content"
										android:layout_gravity="center_vertical"
										android:src="@drawable/xbox_g_medium"
									/>
									<TextView
										android:id="@+id/profile_points"
										android:layout_width="wrap_content" 
										android:layout_height="wrap_content" 
										android:layout_marginLeft="5dp"
										android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
									/>
								</LinearLayout>
							</RelativeLayout>
		                    <View
		                        android:layout_width="fill_parent"
		                        android:layout_height="1px"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
		                        android:background="@color/divider"
		                    />
		                    <RelativeLayout
		                        android:layout_width="fill_parent"
		                        android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
		                    >
		                        <TextView
		                            android:id="@+id/rep_label"
		                            android:text="@string/info_rep"
		                            android:layout_width="wrap_content"
		                            android:layout_height="wrap_content" 
		                            android:layout_alignParentTop="true"
		                            android:layout_alignParentLeft="true"
		                            android:textAppearance="@style/TextAppearance.friendCategory" 
		                        />
		                        <LinearLayout 
		                            android:id="@+id/profile_rep"
		                            android:layout_width="wrap_content" 
		                            android:layout_height="wrap_content"
		                            android:orientation="horizontal"
		                            android:gravity="center"
		                            android:layout_alignTop="@id/rep_label"
		                            android:layout_alignBottom="@id/rep_label"
		                            android:layout_alignParentRight="true"
		                        >
		                            <ImageView 
		                                android:id="@+id/profile_rep_star0"
		                                android:src="@drawable/xbox_star_o0"
		                                android:layout_width="14dp" 
		                                android:layout_height="14dp"
		                            />
		                            <ImageView 
		                                android:id="@+id/profile_rep_star1"
		                                android:src="@drawable/xbox_star_o0"
		                                android:layout_width="14dp" 
		                                android:layout_height="14dp"
		                            />
		                            <ImageView 
		                                android:id="@+id/profile_rep_star2"
		                                android:src="@drawable/xbox_star_o0"
		                                android:layout_width="14dp" 
		                                android:layout_height="14dp"
		                            />
		                            <ImageView 
		                                android:id="@+id/profile_rep_star3"
		                                android:src="@drawable/xbox_star_o0"
		                                android:layout_width="14dp" 
		                                android:layout_height="14dp"
		                            />
		                            <ImageView 
		                                android:id="@+id/profile_rep_star4"
		                                android:src="@drawable/xbox_star_o0"
		                                android:layout_width="14dp" 
		                                android:layout_height="14dp"
		                            />
		                        </LinearLayout>
		                    </RelativeLayout>
							<View
								android:layout_width="fill_parent"
								android:layout_height="1px"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
								android:background="@color/divider"
							/>
							<RelativeLayout
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
							>
								<TextView
									android:id="@+id/profile_name_cat"
									android:text="@string/info_name"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentLeft="true"
									android:textAppearance="@style/TextAppearance.friendCategory" 
								/>
								<TextView
									android:id="@+id/profile_name"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentRight="true"
									android:layout_toRightOf="@id/profile_name_cat"
									android:layout_marginLeft="10dp"
									android:gravity="right"
									android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
								/>
							</RelativeLayout>
							<View
								android:layout_width="fill_parent"
								android:layout_height="1px"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
								android:background="@color/divider"
							/>
							<RelativeLayout
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
							>
								<TextView
									android:id="@+id/profile_location_cat"
									android:text="@string/info_location"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentLeft="true"
									android:textAppearance="@style/TextAppearance.friendCategory" 
								/>
								<TextView
									android:id="@+id/profile_location"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentRight="true"
									android:layout_toRightOf="@id/profile_location_cat"
									android:layout_marginLeft="10dp"
									android:gravity="right"
									android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
								/>
							</RelativeLayout>
							<View
								android:layout_width="fill_parent"
								android:layout_height="1px"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
								android:background="@color/divider"
							/>
							<RelativeLayout
								android:layout_width="fill_parent"
								android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
							>
								<TextView
									android:id="@+id/profile_motto_cat"
									android:text="@string/info_motto"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentLeft="true"
									android:textAppearance="@style/TextAppearance.friendCategory" 
								/>
								<TextView
									android:id="@+id/profile_motto"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content" 
									android:layout_alignParentTop="true"
									android:layout_alignParentRight="true"
									android:layout_toRightOf="@id/profile_motto_cat"
									android:layout_marginLeft="10dp"
									android:gravity="right"
									android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
								/>
							</RelativeLayout>
							<View
								android:layout_width="fill_parent"
								android:layout_height="1px"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"
								android:background="@color/divider"
							/>
							<TextView
								android:text="@string/info_bio"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content" 
								android:textAppearance="@style/TextAppearance.friendCategory" 
	                            android:paddingLeft="5dp"
	                            android:paddingRight="5dp"
							/>
							<TextView
								android:id="@+id/profile_bio"
								android:layout_width="fill_parent"
								android:layout_height="wrap_content" 
								android:textAppearance="@style/TextAppearance.xboxFriendInfo" 
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
							/>
						</LinearLayout>
					</LinearLayout>
				</LinearLayout>
			</ScrollView>
		</LinearLayout>
	</LinearLayout>
    <TextView
        android:id="@+id/unselected"
        android:layout_width="fill_parent" 
        android:layout_height="fill_parent"
        android:text="@string/select_friend_to_view"
        android:padding="5dip" 
        android:visibility="gone"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.largeMessage" 
    />
</FrameLayout>