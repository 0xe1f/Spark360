<RelativeLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content" 
	android:minHeight="?android:attr/listPreferredItemHeight" 
	android:paddingTop="5dip"
	android:paddingBottom="5dip"
	android:paddingLeft="5dip"
	android:paddingRight="9dip"
>
	<ImageView 
		android:id="@+id/you_icon" 
		android:layout_alignParentLeft="true" 
		android:layout_alignParentTop="true" 
		android:layout_marginRight="5dp"
		android:layout_width="48dp" 
		android:layout_height="48dp"
	/>
    <TextView
        android:id="@+id/you_gamertag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textAppearance="@style/TextAppearance.secondaryBold" 
        android:layout_below="@id/you_icon"
        android:layout_alignLeft="@id/you_icon"
    />
	<LinearLayout
        android:id="@+id/you_gp_section"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_below="@id/you_gamertag" 
        android:layout_alignLeft="@id/you_icon"
        android:orientation="horizontal"
    >
        <TextView
            android:id="@+id/you_gp_earned"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            android:textAppearance="@style/TextAppearance.xboxGtext" 
        />
        <ImageView 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/xbox_g_small"
        />
    </LinearLayout>
    <TextView
        android:id="@+id/you_achievements_unlocked"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.secondary" 
        android:layout_below="@id/you_gp_section" 
        android:layout_alignLeft="@id/you_icon"
    />
    
	<ImageView 
        android:id="@+id/me_icon" 
        android:layout_alignParentRight="true" 
        android:layout_alignParentTop="true" 
        android:layout_marginRight="5dp"
        android:layout_width="48dp" 
        android:layout_height="48dp"
    />
    <TextView
        android:id="@+id/me_gamertag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:textAppearance="@style/TextAppearance.secondaryBold" 
        android:layout_below="@id/me_icon"
        android:layout_alignRight="@id/me_icon"
    />
	<LinearLayout
		android:id="@+id/me_gp_section"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content" 
        android:layout_below="@id/me_gamertag" 
        android:layout_alignRight="@id/me_icon"
		android:orientation="horizontal"
	>
		<ImageView 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginRight="4dp"
			android:layout_gravity="center_vertical"
			android:src="@drawable/xbox_g_small"
		/>
		<TextView
			android:id="@+id/me_gp_earned"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" 
			android:textAppearance="@style/TextAppearance.xboxGtext" 
		/>
	</LinearLayout>
    <TextView
        android:id="@+id/me_achievements_unlocked"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.secondary" 
        android:layout_below="@id/me_gp_section" 
        android:layout_alignRight="@id/me_icon"
    />
</RelativeLayout>