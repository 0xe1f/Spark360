<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:paddingRight="5dp"
	android:orientation="horizontal"
	style="@style/listViewActivatedStyle"
>
	<ImageView 
		android:id="@+id/accounts_avatar_icon" 
		android:layout_width="52dp" 
		android:layout_height="52dp"
		android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@color/white"
	/>
	<LinearLayout
		android:id="@+id/friend_status_section"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" 
	    android:paddingTop="2dp"
		android:orientation="vertical"
	>
		<TextView
			android:id="@+id/accounts_gamertag"
			android:textAppearance="@style/TextAppearance.accountId" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" 
		/>
		<TextView
			android:id="@+id/accounts_description"
			android:textAppearance="@style/TextAppearance.accountType" 
		 	android:layout_width="wrap_content"
		 	android:layout_height="wrap_content"
		 />
	</LinearLayout>
</LinearLayout>
